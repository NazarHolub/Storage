<Window x:Class="courseWork.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:courseWork"
        mc:Ignorable="d"
        Title="Meneger" Height="348" Width="594" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Storage.jpg" Opacity="0.5"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="230*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="1" Opacity="0.9" Name="datagrid"/>

        <StackPanel>

            <Button Name="btnFreeSpace" Content="Free space" Margin="10" Click="BtnFreeSpace_Click" Width="120"/>
            
            <Button Name="btnPromiser" Click="BtnPromiser_Click" Content="Promisers" Width="120"/>


            <Label Content="Profit:" Margin="20 100 0 0"/>
            <Label Name="lblProfit" Margin="20 0 0 0" />
            <Button Content="Back to login" Click="Button_Click" Width="120" Margin="0 70 0 0"/>
        </StackPanel>
    </Grid>
</Window>
